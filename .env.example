# Environment Configuration Template
# Copy this file and rename to .env.development or .env.production
# NEVER commit real production secrets!

# API Configuration
API_BASE_URL=https://your-production-api.com/api
API_TIMEOUT=15000
API_RETRY_ATTEMPTS=3
API_RETRY_DELAY=1000

# Feature Flags - Production Ready
ENABLE_ANALYTICS=false
ENABLE_CRASH_REPORTING=false

# Auth Configuration
# JWT_SECRET: Load from secure secret management in production
# Use development-safe values for local development only
JWT_SECRET=your-dev-secret-here
REFRESH_TOKEN_EXPIRY=2592000  # 30 days (in seconds)
ACCESS_TOKEN_EXPIRY=3600      # 1 hour (in seconds)

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_CRASH_REPORTING=true
ENABLE_BIOMETRIC_AUTH=true

# Debug Settings
DEBUG_API_LOGS=false
DEBUG_REDUX_LOGS=false

# App Configuration
APP_VERSION=1.0.0
BUILD_NUMBER=1

# Additional Configuration Notes:
# - Token expiry values are in seconds for consistency
# - JWT_SECRET should be at least 32 characters in production
# - All boolean flags should be lowercase (true/false)
# - API URLs should include protocol (https://)
