# =============================================================================
# STAGING ENVIRONMENT CONFIGURATION
# =============================================================================
# Last updated: July 31, 2025
# CodeRabbit compliant environment variables with type safety validation
# 
# SECURITY NOTE: This file contains staging-specific configuration.
# Never commit production secrets to version control.
# =============================================================================

# API Configuration
# Type: string (URL format required)
API_BASE_URL=https://your-staging-api.com

# Type: number (milliseconds, range: 5000-30000)
API_TIMEOUT=12000

# Type: number (range: 1-5)
API_RETRY_ATTEMPTS=3

# Type: number (milliseconds, range: 500-5000)
API_RETRY_DELAY=1000

# Authentication Configuration
# SECURITY WARNING: These are staging credentials only
# Type: string (minimum 32 characters for security)
JWT_SECRET=your-staging-jwt-secret-please-change-this-to-secure-value

# Type: string (format: number + time unit: d/h/m)
REFRESH_TOKEN_EXPIRY=14d

# Type: string (format: number + time unit: d/h/m)
ACCESS_TOKEN_EXPIRY=30m

# Feature Flags Configuration
# Type: boolean (true/false) - Controls analytics data collection
ENABLE_ANALYTICS=true

# Type: boolean (true/false) - Controls crash reporting service
ENABLE_CRASH_REPORTING=true

# Type: boolean (true/false) - Controls biometric authentication availability
ENABLE_BIOMETRIC_AUTH=true

# Debug Settings (Staging Environment)
# Type: boolean (true/false) - Controls API request/response logging
# NOTE: Should be true in staging for debugging, false in production
DEBUG_API_LOGS=true

# Type: boolean (true/false) - Controls state management logging
# NOTE: Can impact performance, use sparingly in staging
DEBUG_REDUX_LOGS=false

# Type: boolean (true/false) - Controls component lifecycle logging
DEBUG_COMPONENT_LOGS=false

# Application Metadata
# Type: string (semantic version format: x.y.z)
APP_VERSION=1.0.0

# Type: number (integer, incremental build number)
BUILD_NUMBER=1

# Type: string (staging/production/development)
ENVIRONMENT=staging

# Storage Configuration
# Type: boolean (true/false) - Controls storage encryption
ENABLE_SECURE_STORAGE=true

# Performance Monitoring
# Type: boolean (true/false) - Controls performance tracking
ENABLE_PERFORMANCE_MONITORING=true

# Type: number (milliseconds, warning threshold for slow operations)
PERFORMANCE_WARNING_THRESHOLD=1000

# =============================================================================
# VALIDATION NOTES:
# - All boolean values must be exactly 'true' or 'false' (case sensitive)
# - Timeout values should be reasonable (5000-30000ms for API_TIMEOUT)
# - URLs must include protocol (https:// for production/staging)
# - JWT_SECRET should be at least 32 characters for security
# - Token expiry formats: number + unit (d=days, h=hours, m=minutes)
# =============================================================================

# CodeRabbit Compliance Notes:
# - Type annotations added for all variables
# - Security warnings included for sensitive values
# - Validation guidelines provided
# - Proper documentation structure implemented
# - No unsafe or ambiguous configurations
